{
  "explorer.compactFolders": false,
  "standard.validate": [
    "javascript",
    "javascriptreact",
    { "language": "html", "autoFix": true }
  ],
  "standard.options": {
    "globals": [],
    "ignore": [
      "node_modules/**",
      "public/**",
      "docs/**",
      "webpack/*.js",
      "dist/**",
      "*.json"
    ],
    "plugins": ["html"],
  },
  "standard.enable": true
}